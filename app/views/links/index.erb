<h1> Links </h1>

<ul id='links'>

</ul>

<table>
  <tr>
    <th>Title</th>
    <th>URL</th>
  </tr>
  <% @links.each do |link| %>
  <tr>
    <td style="border: 2px solid #dddddd"><%= link.title %></td>
    <td style="border: 2px solid #dddddd"><%= link.url   %></td>
    <td style="border: 2px solid #dddddd"><%= link.tags.map { |tag| tag.name }.join("-") %></td>
  </tr>
  <% end %>
</table>
